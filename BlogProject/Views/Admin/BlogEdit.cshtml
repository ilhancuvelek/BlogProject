
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BlogModel

<h1 class="h3">Edit Product</h1>
<hr>
<form asp-controller="Admin" asp-action="BlogEdit" method="POST" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-8">
       
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="BlogId" value="@Model.BlogId" />
            <div class="form-group row">
                <label asp-for="BlogTitle" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="BlogTitle">
                    <span asp-validation-for="BlogTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogContent" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="BlogContent"></textarea>
                    <span asp-validation-for="BlogContent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogThumbnailImage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="BlogThumbnailImage">
                    <span asp-validation-for="BlogThumbnailImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogImage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="hidden" asp-for="BlogImage">
                    <img src="~/img/@Model.BlogImage" width="80" />
                    <input type="file" name="file" />
                </div>
            </div>
            <br />
            @Html.Label("Kategori")
            @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cv,new  {@class="form-control" })
            <br />
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Edit Blog</button>
                </div>
            </div>
        
    </div>
    <div class="col-md-4">
        <div class="custom-control custom-checkbox">
            <input asp-for="BlogStatus" type="checkbox" class="custom-control-input">
            <label asp-for="BlogStatus" class="custom-control-label"></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input asp-for="IsHomePageBlog" type="checkbox" class="custom-control-input">
            <label asp-for="IsHomePageBlog" class="custom-control-label"></label>
        </div>
    </div>
</div>
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor");
    </script>
}