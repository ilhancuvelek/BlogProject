
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BlogModel

<h1 class="h3">Create Blog</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="BlogCreate" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="BlogTitle" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="BlogTitle">
                    <span asp-validation-for="BlogTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogContent" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <textarea id="editor" rows="10" class="form-control" asp-for="BlogContent"></textarea>
                    <span asp-validation-for="BlogContent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogThumbnailImage" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="BlogThumbnailImage">
                    <span asp-validation-for="BlogThumbnailImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BlogImage" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="BlogImage">
                    <span asp-validation-for="BlogImage" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryId">
                </div>
            </div>*@
            <br />
            @Html.Label("Kategori")
            @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cv,new  {@class="form-control" })
            @Html.ValidationMessageFor(x => x.CategoryId)
            <br />
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Blog</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor");
    </script>
}