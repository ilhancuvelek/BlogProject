@model BlogListViewModel
@{
    ViewData["Title"] = "list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_search")
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_blogs", blog)
                </div>
            }
        </div>
        
    </div>
</div>


